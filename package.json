{
  "name": "webpack-extension-manifest-plugin",
  "version": "0.2.0",
  "description": "Creates manifest json file based you config",
  "license": "MIT",
  "repository": "GitScrum/webpack-extension-manifest-plugin",
  "homepage": "GitScrum/webpack-extension-manifest-plugin#readme",
  "bugs": "GitScrum/webpack-extension-manifest-plugin/issues",
  "author": {
    "name": "Ivan Demidov",
    "email": "Scrum@list.ru",
    "url": "https://twitter.com/Scrum_"
  },
  "main": "lib/index.js",
  "engines": {
    "node": ">=4"
  },
  "scripts": {
    "precommit": "clinton && lint-staged",
    "commitmsg": "commitlint --extends=@commitlint/config-angular -e",
    "postpublish": "conventional-changelog -i changelog.md -s -r 0 && git commit -am \"build: Update changelog\"",
    "patch": "np patch --any-branch --no-yarn",
    "minor": "np minor --any-branch --no-yarn",
    "major": "np major --any-branch --no-yarn",
    "prepare": "npm run build",
    "build": "rimraf lib && babel src -d lib",
    "test": "nyc ava && nyc report --reporter=text-lcov > coverage.lcov && codecov"
  },
  "files": [
    "lib/"
  ],
  "keywords": [
    "webpack",
    "plugin",
    "browser",
    "extension",
    "manifest",
    "json"
  ],
  "dependencies": {
    "deepmerge": "^2.0.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^5.2.0",
    "@commitlint/config-angular": "^5.1.1",
    "ava": "*",
    "babel-cli": "^6.24.1",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.2",
    "babel-plugin-add-module-exports": "^0.2.0",
    "babel-preset-env": "^1.4.0",
    "babel-preset-minify": "^0.2.0",
    "babel-register": "^6.24.1",
    "clinton": "^0.13.0",
    "codecov": "^3.0.0",
    "conventional-changelog-cli": "^1.3.3",
    "eslint": "^4.6.1",
    "eslint-config-xo": "^0.19.0",
    "eslint-formatter-pretty": "^1.3.0",
    "eslint-plugin-babel": "^4.0.1",
    "eslint-plugin-html": "^4.0.1",
    "eslint-plugin-markdown": "^1.0.0-beta.7",
    "eslint-plugin-unicorn": "^3.0.0",
    "husky": "^0.14.3",
    "lint-staged": "^6.0.0",
    "np": "^2.14.1",
    "nyc": "^11.3.0",
    "path-exists": "^3.0.0",
    "rimraf": "^2.6.1",
    "tempy": "^0.2.1",
    "webpack": "^3.10.0",
    "webpack-merge": "^4.1.1"
  },
  "ava": {
    "require": [
      "babel-register"
    ],
    "files": [
      "test/**/test.*.js"
    ]
  },
  "lint-staged": {
    "*.{js,html}": "eslint",
    "./*.md": "eslint --rule indent: [error, 4] ."
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": 4
          }
        }
      ],
      [
        "minify",
        {
          "mangle": false
        }
      ]
    ],
    "plugins": [
      "add-module-exports"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "plugins": [
      "html",
      "unicorn",
      "babel",
      "markdown"
    ],
    "extends": [
      "xo"
    ]
  },
  "clinton": {
    "ignores": [
      "test/**",
      "lib/**"
    ],
    "rules": {
      "pkg-main": [
        "off"
      ],
      "xo": [
        "off"
      ]
    }
  }
}
